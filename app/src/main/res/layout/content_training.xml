<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#403D39"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/training_name"
        android:textColor="#FFFCF2"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/training_type"
        android:textColor="#FFFCF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/training_duration"
        android:textColor="#FFFCF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/training_difficulty"
        android:textColor="#FFFCF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
